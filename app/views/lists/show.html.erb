<h1><%= @list.name %></h1>

<% if @list.photo.attached? %>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<div>
  <%= link_to 'Add a Movie to this list', new_list_bookmark_path(@list) %>
</div>

<div>
  <% @bookmarks.each do |bookmark| %>
    <div class="card">
    <div class="card-body">
      <h5 class="card-title fs-1"><%= bookmark.movie.title %></h5>
      <p><%= bookmark.comment %></p>
      <%= link_to 'Remove from list', bookmark_path(bookmark), method: :delete,
                      data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
    </div>
    </div>
  <% end %>
</div>
